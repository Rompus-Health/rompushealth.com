---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Feature from '../components/blocks/features/FeatureSticky.astro'
import Hero from '../components/blocks/hero/PageHeader.astro'
//import CTA from '../components/blocks/CTA/BasicDark.astro'

// Data
import featuresData from '../data/json-files/featuresData.json'
// - Feature Categories
const featuresAnalytics = featuresData.filter((feature) => feature.category === 'Authorization')
const featuresProductivity = featuresData.filter((feature) => feature.category === 'Pathways')
const featuresSecurity = featuresData.filter((feature) => feature.category === 'Security')
//const featuresIntegrations = featuresData.filter((feature) => feature.category === 'Integrations')
//const featuresSupport = featuresData.filter((feature) => feature.category === 'Support')

// Content
// - SEO
const SEO = {
	title: 'Rompus Health | End to End Prior Authorization for Oncology',
	description:
		"Rompus Health is a AI Clinical Decision Support Software built for oncology practices to deliver guideline concordant care and streamline prior authorization"
}
// - Page Header
const header = {
	title: 'Why you and your team will <strong>love</strong> Rompus',
	text: "Submit, track, and manage all prior authorizations in one simple platform"
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	<Feature
		title="Automated Prior Authorization"
		text="Follows HL7 Da Vinci requirements. Collect evidence. Submit over FHIR. NO fax portals."
		data={featuresAnalytics}
	/>
	<Feature
		title="Standardized Clinical Pathways"
		text="Build guideline‑concordant pathways. Check plan conformance. Auto‑assign tasks to Clinicians, Physicists, and Billing."
		data={featuresProductivity}
		classes="bg-neutral-50 dark:bg-neutral-900"
	/>
	<Feature
		title="Privacy and Security"
		text="Local LLM processing keeps PHI inside your network with role-based access and full audit trails."
		data={featuresSecurity}
	/>
	<!--<Feature
		title="Seamless Connectivity"
		text="Effortlessly connect your favorite apps and automate workflows for a smoother workday."
		data={featuresIntegrations}
		classes="bg-neutral-50 dark:bg-neutral-900"
	/>
	<Feature
		title="24/7 Expert Help"
		text="Our friendly support team is always here to assist you with any questions or issues."
		data={featuresSupport}
	/> 
	<CTA />-->
</Layout>
